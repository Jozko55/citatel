<p id="notice"><%= notice %></p>

<h1>Komentare ku <%= link_to @book.name, @book %></h1>

<table>
  <thead>
    <tr>
      <th>Comment text</th>
      <th>Reader name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.comment_text %></td>
        <td><%= comment.reader_name %></td>
        <td><%= link_to 'Show', [@book, comment] %></td>
        <td><%#= link_to 'Edit', edit_book_comment_path(@book, comment) %></td>
        <td><%#= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_book_comment_path(@book) %>
